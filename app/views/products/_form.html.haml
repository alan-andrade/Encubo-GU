= form_for @product, html:{multipart: true} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2 #{pluralize(@product.errors.count, "error")} prohibited this product from being saved
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :logo
    = f.file_field :logo
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit
