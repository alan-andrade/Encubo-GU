.login
  .container
    .row
      =image_tag 'viejitos.jpg'

    .row.bottom
      .span4
        %br
        =image_tag 'farmasa.png'
      .span6.offset2
        = form_for @user_session, :url => user_session_path, html: { class: 'form-horizontal' }  do |f|
          %fieldset
            %legend Capacitación En Línea
            .control-group
              = f.label :email, class: 'control-label'
              .controls
                = f.text_field :email
            .control-group
              = f.label :password, class: 'control-label'
              .controls
                = f.password_field :password
            .control-group
              = f.label :remember_me, 'Recordar mi acceso', class: 'control-label'
              .controls
                = f.check_box :remember_me
            .form-actions
              = f.submit "Entrar", class: 'btn btn-primary'
